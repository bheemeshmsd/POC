{
    "env": {
        "browser": true,
        "es2021": true,
        "jest":true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules":  {
        "indent": 1,
        "import/prefer-default-export": 1,
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": [
              "**/config/**/*.js"
            ]
          }
        ],
        "camelcase": "off",
        "class-methods-use-this": 1,
        "no-restricted-syntax": 1,
        "no-use-before-define": 0,
        "no-param-reassign": 1,
        "no-console": 2,
        "no-useless-escape": 1,
        "new-cap": 0,
        "func-names": 0,
        "function-paren-newline": [
          "error",
          "consistent"
        ],
        "prefer-spread": 1,
        "space-before-function-paren": 0,
        "comma-dangle": [
          2,
          "never"
        ],
        "strict": 0,
        "max-len": [
          1,
          128
        ],
        "quotes": [
          "error",
          "single",
          {
            "allowTemplateLiterals": true
          }
        ],
        "object-curly-newline": [
          "error",
          {
            "consistent": true
          }
        ]
      }
}
